{
  "name": "@devdado/gedado-ui",
  "version": "0.0.1",
  "description": "Gedado UI",
  "type": "module",
  "main": "dist/gedado-ui.umd.js",
  "module": "dist/gedado-ui.es.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/devdado/gedado-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "keywords": [
    "lit",
    "typescript",
    "javascript",
    "node",
    "tailwind"
  ],
  "author": {
    "name": "Gerardo Heredia",
    "email": "gerardo.heredia@proton.me"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:cem": "custom-elements-manifest analyze --globs 'src/components/**/*.ts' --litelement --outdir . --exclude src/components/index.ts",
    "preview": "vite preview",
    "prettier:format": "prettier --write \"**/*.{ts,html,css,json,md}\"",
    "prettier:check": "prettier --check \"**/*.{ts,html,css,json,md}\"",
    "clean": "rm -rf dist",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "lint": "eslint --config eslint.config.ts .",
    "lint:fix": "eslint --config eslint.config.ts . --fix",
    "check:all": "npm run prettier:check && npm run lint",
    "prepare": "husky install",
    "cz": "cz",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:once": "vitest run",
    "test:file": "vitest -- $1"
  },
  "dependencies": {
    "lit": "^3.3.0",
    "material-symbols": "^0.31.9",
    "storybook": "^9.1.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@eslint/config-inspector": "^1.2.0",
    "@eslint/css": "^0.11.0",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.2.0",
    "@html-eslint/eslint-plugin": "^0.46.2",
    "@open-wc/testing": "^4.0.0",
    "@open-wc/testing-helpers": "^3.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@storybook/addon-a11y": "^9.1.1",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-vitest": "^9.1.1",
    "@storybook/web-components-vite": "^9.1.1",
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "commitizen": "^4.3.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "playwright": "^1.54.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "semantic-release": "^24.2.7",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "custom-elements-manifest.json"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/gedado-ui.es.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/gedado-ui.umd.js"
      }
    }
  },
  "license": "MIT"
}
